<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.dribbble.com/users/297873/screenshots/8073931/media/7d0dee822daca7201af0dcce1821a721.jpg);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
</div>
<div>

<div class="card-product">
    <img src="https://img.cuisineaz.com/610x610/2013-12-20/i92868-mojito-sans-alcool.jpg" />
  <div class="card-product-infos">
  <h1><%= @cocktail.name %></h1>
  </div>
</div>

<br>
<br>

<div class="card-product">
  <img src="https://www.finarome.com/8694-large_default/shaker-a-cocktail-professionnel-en-inox-780-ml.jpg"/>
<div class="card-product-infos">
  <h2>Recipe</h2>
    <ul><% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> of <%= dose.ingredient.name %></li>
    <%= link_to "", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"}, class:"fa fa-trash destroy_dose" %>
    <i ></i>
    <% end %>
    </ul>
  </div>
</div>

<br>
<br>

<div>
<h3>Add a new dose</h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
  <%= f.input :description %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
</div>


<p><%= link_to 'Go back to Cocktails list', cocktails_path, class:"btn btn-small btn-sucess" %></p>
